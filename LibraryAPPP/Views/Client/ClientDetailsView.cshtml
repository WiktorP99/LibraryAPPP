@model LibraryAPPP.DB.DTO.Client

<div class="d-flex justify-content-between align-items-center">
    <button class="btn btn-primary mb-3" onclick="goBack()">Powrót</button>
</div>
<br/>
<div>
    <h3 class="m-0">Informacje o kliencie</h3>
</div>
<br/>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.ClientFirstName @Model.ClientLastName</h5>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Identyfikator klienta:</strong> @Model.ClientId</li>
            <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
            <li class="list-group-item"><strong>Adres:</strong> @Model.Address</li>
            <li class="list-group-item"><strong>Miasto:</strong> @Model.City</li>
            <li class="list-group-item"><strong>Województwo:</strong> @Model.Province</li>
            <li class="list-group-item"><strong>Kod pocztowy:</strong> @Model.PostalCode</li>
        </ul>
    </div>
</div>

<td>
    <a class="btn btn-primary" href="/SalesOrder/Index/@Model.ClientId" onclick="buyBook(@Model.ClientId)">Kup książkę</a>
</td>

<td>
    <a class="btn btn-primary" href="/Rental/Index/@Model.ClientId" onclick="rentBook(@Model.ClientId)">Wypożycz książkę</a>
</td>

@section Scripts {
    <script>
        function goBack() {
            window.location.href = "/";
        }
        
        function buyBook(bookId) {
            window.location.href = "/SalesOrder/Index/" + bookId;
        }
        
        function rentBook(bookId) {
            window.location.href = "/Rental/Index/" + bookId;
        }
    </script>
}